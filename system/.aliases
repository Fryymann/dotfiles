# Environment Aliases
alias ld="ls -ld */"  # See only directories
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ls='ls --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias debv="cat /etc/debian_version"

# Cuz fuck .DS_Store
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

# Ask the computer nicely...
alias plz="sudo"

# Display all aliases
alias listaliases="alias | sed 's/=.*//'"

# I wanna go fast
alias speedtest="wget -O /dev/null http://speed.transip.nl/100mb.bin"

alias startmongo="mongod --dbpath /home/ideans/Documents/dev/tools/mongodb/mongodb-linux-x86_64-3.6.6/data/db"

# ---------- Workspace Aliases ----------
alias gpd='cd /mnt/d/data/developer/projects'

alias editbash='code ~/.dotfiles'

alias bn='babel-node $argv'

alias showwifi='netsh wlan show profile name="Verizon_DTX3HJ" key=clear'

# --------- Git Aliases ---------
alias ga='git add $argv'
alias gst='git status'
alias gp='git push $argv'
alias gl='git pull $argv'
alias gb='git branch $argv'
alias gc='git commit $argv'
alias gco='git checkout $argv'

alias grv='git remote -v'
alias gbv='git branch -vv'
alias glog='git log --oneline --decorate --graph'
